{
    "manifest_version": 3,
    "name": "ScriptFlow - Transform Your Apps Script Editor",
    "version": "1.4.2",
    "description": "Dark themes, Zen mode, code snippets & productivity tools for Google Apps Script. Make coding beautiful.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://script.google.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://script.google.com/*"
            ],
            "js": [
                "uimanager.js",
                "triggers.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}